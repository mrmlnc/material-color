material-color-class(name, property = color, prefix = '') {
  // If you want to do just one particular color
  if name != 'all' {
    list = lookup('clr-' + name + '-list');

    for clr, var in list {
      if clr == 'base' {
        if (prefix != '') {
          .{prefix}-{name} {
            {property}: var;
          }
        }
        else {
          .{name} {
            {property}: var;
          }
        }
      }
      else {
        if (prefix != '') {
          .{prefix}-{name}-{clr} {
            {property}: var;
          }
        }
        else {
          .{name}-{clr} {
            {property}: var;
          }
        }
      }
    }
  }

  //If you wanted to do all the colors
  else {
    for clrl, varl in clr-list-all {
      for clr, var in varl {
        if clr == 'base' {
          if (prefix != '') {
            .{prefix}-{clrl} {
              {property}: var;
            }
          }
          else {
            .{clrl} {
              {property}: var;
            }
          }
        }
        else {
          if (prefix != '') {
            .{prefix}-{clrl}-{clr} {
              {property}: var;
            }
          }
          else {
            .{clrl}-{clr} {
              {property}: var;
            }
          }
        }
      }
    }
  }
}
